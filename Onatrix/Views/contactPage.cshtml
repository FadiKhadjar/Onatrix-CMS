@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;

    var contactImage = Model?.Value<IPublishedContent>("contactImage")?.Url() ?? "";
    var vectorImage = Model?.Value<IPublishedContent>("contactVectorImage")?.Url() ?? "";
    var backgroundImage = Model?.Value<IPublishedContent>("contactBackgroundImage")?.Url() ?? "";

    var formImage = Model?.Value<IPublishedContent>("contactFormImage")?.Url() ?? "";

    var companyImage1 = Model?.Value<IPublishedContent>("collabsImageOne")?.Url() ?? "";
    var companyImage2 = Model?.Value<IPublishedContent>("collabsImageTwo")?.Url() ?? "";
    var companyImage3 = Model?.Value<IPublishedContent>("collabsImageThree")?.Url() ?? "";
    var companyImage4 = Model?.Value<IPublishedContent>("collabsImageFour")?.Url() ?? "";
    var companyImage5 = Model?.Value<IPublishedContent>("collabsImageFive")?.Url() ?? "";
    var companyImage6 = Model?.Value<IPublishedContent>("collabsImageSix")?.Url() ?? "";
    
}


<section id="page-title">
    <div class="container">
        <div class="content">
            <h2>@Model?.Value("pageHeroTitle")</h2>
            <ul class="breadcrumbs">
                <li class="breadcrumb-link"><a href="@Model.Value("pageHeroBreadcrumbUrl")">@Model?.Value("pageHeroBreadcrumbText")</a></li>
                <li class="fa-solid fa-chevron-right"></li>
                <li class="breadcrumb-link"><a href="#"></a>@Model?.Value("pageHeroBreadcrumbCurrentText")</li>
            </ul>
        </div>
    </div>
</section>


<section id="contact-info">
    <div class="container">
        <div class="parent">
            <img class="child-1" src="@contactImage" alt="">
            <img class="child-2" src="@backgroundImage" alt="">
            <img class="child-3" src="@vectorImage" alt="">
        </div>
        <div class="content">
            <h2>@Model?.Value("contactHeadline")</h2>
            <div class="content-box">
                <div>
                    <i class="fa-solid fa-location-dot"></i>
                    <p>@Model?.Value("contactInformation1Title")</p>
                </div>
                <p>@Model?.Value("contactInformation1Text")</p>
            </div>
            <div class="content-box">
                <div>
                    <i class="fa-solid fa-phone"></i>
                    <p>@Model?.Value("contactInformation2Title")</p>
                </div>
                <p>@Model?.Value("contactInformation2Text")</p>
            </div>
            <div class="content-box">
                <div>
                    <i class="fa-regular fa-envelope"></i>
                    <p>@Model?.Value("contactInformation3Title")</p>
                </div>
                <p>@Model?.Value("contactInformation3Text")</p>
            </div>
        </div>
    </div>
</section>


<section id="map-section" style="background-image:url(@formImage);">
    <div class="container">
        <div class="section-title mt-5">
            <p>@Model?.Value("contactFormTitle")</p>
            <h2>@Model?.Value("contactFormHeadline")</h2>
        </div>
        <p class="italic mt-4">@Model?.Value("contactFormText")</p>
        <form class="contact-form">
            <div class="flex">
                <div class="name">
                    <input type="text" placeholder="Name" tabindex="1">
                </div>
                <div class="phone">
                    <input type="text" placeholder="Phone" tabindex="2">
                </div>
            </div>
            <div class="flex">
                <div class="email">
                    <input type="email" placeholder="Email address" tabindex="3">
                </div>
                <div class="dropdown">
                    <button class="dropbtn">Financial consulting<i class="fa-solid fa-chevron-down"></i></button>
                </div>
            </div>
            <div class="flex">
                <button class="btn-theme mt-2">Submit</button>
            </div>
        </form>
    </div>
</section>


<section id="collaborations">
    <div class="container">
        <img src="@companyImage1" alt="">
        <img src="@companyImage2" alt="">
        <img src="@companyImage3" alt="">
        <img src="@companyImage4" alt="">
        <img src="@companyImage5" alt="">
        <img src="@companyImage6" alt="">
    </div>
</section>